<h1>What do you think of <%= @post.title %>'s GIF? </h1>
<img src="<%= @post.gif %>">

<form action="/posts/<%= @post.id %>/upvote" method="POST">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<button type"submit">Up Vote</button>
</form>

<form action="/posts/<%= @post.id %>/downvote" method="POST">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<button type"submit">Down Vote</button>
</form>

<%#= link_to "THUMBS UP", up_vote_path(@post.id), method: :post %> 
<%#= link_to "THUMBS DOWN", down_vote_path(@post.id), method: :post %> 


<h2> Total Votes: <%= @post.votes %> </h2>

<h1><%= link_to"VIEW ALL POSTS", all_posts_path %> </h1>