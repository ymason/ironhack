<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <%= render :partial => "layouts/concerts_month" %>
            </li>

            <li class="sidebar-brand">
            <form class="form-inline" action="/search" method="POST">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <div class="form-group">
                    <label for="price_search">Name Your Ticket Budget</label>
                        <input type="text" class="form-control" name = "price_search" id="price_search" placeholder="Max Ticket Price">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            </li>
            
            <li class="sidebar-brand">
                <h4> <%= link_to('Popular Concerts', popular_path) %></h4>
            </li>
        </ul>
    </div>

    <div id="page-content-wrapper">
        <div class="page-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">

                    <h2>Concerts Today:</h2>
                    <ul>
                        <% @concerts_today.each do |concert| %>
                        <li><%= link_to(concert.artist, concert_path(concert.id)) %> </li>
                        <% end %>
                    </ul>
                    
                    <div class="col-md-9">
                        <button type="submit" class="btn btn-default">
                                <%= link_to('Create New Concert', new_concert_path) %>
                        </button>
					</div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>